<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Blog</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <h1>My Blog</h1> </header>
  <main>
    <% if (posts.length > 0) { %>
      <ul>
        <% posts.forEach(post => { %>
          <li>
            <div class="post-content">
              <div class="post-title">
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
              </div>
              <% if (post.image) { %>  <img src="<%= post.image %>" alt="<%= post.title %> image" class="post-image">
              <% } %>
            </div>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>No posts yet!</p>
    <% } %>
    <a href="/new">Create New Post</a>
  </main>
</body>
</html>
